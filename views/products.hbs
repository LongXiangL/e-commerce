<div class="container">
  <div class="row">
    <div class="col-7">
      <div class="row mt-3">
        {{#each products}}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%" height="225" src={{this.image}}></img>
            <div class="card-body">
              <p class="card-text">
              <h5>ID:{{this.id}}</h5>
              <h4 style="height:50px"><a href="/products/{{this.id}}">{{this.name}}</a></h4>
              <p>{{this.description}}</p>
              <h5 class="text-success font-weight-bold">$ {{this.price}}</span></h5>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <p style="color:deeppink;">還剩下{{this.inventory}}件</p>
                <div class="btn-group">
                  <form action="/cart" method="POST">
                    <input type="hidden" name="productId" value="{{this.id}}">
                    <button type="submit" class="btn btn-outline-info"><i class="fas fa-shopping-cart fa-1x"></i>
                      加入購物車</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      {{!-- paginator --}}
      <div class="container-fluid" style="padding: 0 20em;">
        <nav class="mt-3" aria-label="page navigation">
          <ul class="pagination">
            <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
              <a class="page-link" href="/products?page={{pagination.prev}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            {{#each pagination.pages}}
            {{#ifCond this ../pagination.currentPage}}
            <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
            {{else}}
            <li class="page-item">
              <a class="page-link" href="/products?page={{this}}">{{this}}</a>
            </li>
            {{/ifCond}}
            {{/each}}
            <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
              <a class="page-link" href="/products?page={{pagination.next}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>

      </div>
    </div>

    <div class="col-4">
      {{> cart}}
    </div>
  </div>
</div>